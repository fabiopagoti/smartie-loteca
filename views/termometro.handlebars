<div class="container">
	<h1 class="my-4">Termômetro</h1>
	<div class="row">
		<div class="col-sm-6">
			<p class="termometro-subtitulo">Selecione 15 números:</p>
			<form class="form-check form-check-inline" method="post">
				<div class="card card-block fundo-numeros">
					{{#each numeros}}
					<div class="d-flex flex-row justify-content-between align-items-center flex-wrap">
						{{#each no}}
						<div class="btn-group numeros-space" data-toggle="buttons">
							<label class="btn btn-outline-primary rounded-circle align-middle label-numero" >
								<div class="numero-texto">
									<input class="input-numero" data-bola="{{this}}" type="checkbox" name="bola{{this}}" enabled>
									{{this}}
									</input>
								</div>
							</label>
						</div>
						{{/each}}
					</div>
					{{/each}}
				</div>
				<button type="button" onclick="verificaAposta()" class="btn btn-primary btn-lg btn-block">
				Analisar combinação!
				</button>
			</form>
		</div>
		<div class="col-sm-6">
			<p class="termometro-subtitulo">Resultado da Análise: </p>
			<div>
				<img src="/img/img_termometro.png" class="termometro-img" alt="Termometro">
			</div>
		</div>
	</div>
</div>